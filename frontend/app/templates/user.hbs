{{#link-to 'users'}}Back{{/link-to}}
<p>
    <label>Name: </label>{{model.name}}
</p>
<div>
    <p>
        <strong>Posts( {{model.posts.length}} ):</strong>
    </p>
  {{#each model.posts as |post|}}
        <div>
          {{#link-to 'user.post' post}}
              <strong>{{post.title}}:</strong>
          {{/link-to}}
      <p>{{post.body}}</p>
            <button {{action 'deletePost' post}}>Delete Post</button>
        </div>
  {{/each}}
</div>
<div>{{#link-to 'user.post.new'}}Add Post{{/link-to}}</div>
